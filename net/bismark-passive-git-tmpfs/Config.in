# bismark-passive-git-tmpfs configuration
menu "Configuration"
    depends on PACKAGE_bismark-passive-git-tmpfs

config BISMARK_PASSIVE_ANONYMIZE
    bool "Anonymize traces"
    help
            Whether to anonymize trace outputs before they are uploaded to the server. Anonymized traces are still subject to whitelisting.
    default y

config BISMARK_PASSIVE_UPDATE_INTERVAL
    int "Update interval in seconds"
    help
            Generate gzipped payloads with this interval.
    default 30

config BISMARK_PASSIVE_UPLOAD_INTERVAL
    int "Upload interval in minutes"
    help
            Upload new updates to the server with with interval.
    default 10

config BISMARK_PASSIVE_TARGET
    string "Build target"
    help
            Specify "debug" or "release"
    default debug

config BISMARK_PASSIVE_FREQUENT_UPDATES
    bool "Enable frequent updates"
    help
            Write small amount of usage information every 5 seconds.
    default false

config BISMARK_PASSIVE_HTTP_URL
    bool "Record hashed HTTP URLs"
    help
            Recorded hashed URLs for all traffic on port 80. No additional
            unhashed data is recorded, even for whitelisted domains.

endmenu
